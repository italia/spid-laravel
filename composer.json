{
  "name": "italia/spid-laravel",
  "description": "Laravel Package for SPID authentication",
  "keywords": [
    "SPID",
    "Laravel",
    "PHP"
  ],
  "homepage": "https://github.com/italia/spid-laravel",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Davide Porrovecchio - Agenzia per l'Italia Digitale",
      "email": "davide.porrovecchio@agid.gov.it"
    }
  ],
  "require": {
    "php": "^8.2",
    "illuminate/config": "^9.52.4|^10.0|^11.0|^12.0",
    "illuminate/support": "^9.52.4|^10.0|^11.0|^12.0",
    "onelogin/php-saml": "^4.1.0",
    "cweagans/composer-patches": "^1.7",
    "nesbot/carbon": "^2.66|^3.0"
  },
  "require-dev": {
    "pds/skeleton": "~1.0",
    "phpunit/phpunit": "^9.5.10|^10.0|^11.0",
    "orchestra/testbench": "^7.22.1|^8.0|^9.0",
    "mockery/mockery": "^1.5.1",
    "mikey179/vfsstream": "^1.6",
    "friendsofphp/php-cs-fixer": "~3.41.0"
  },
  "autoload": {
    "psr-4": {
      "Italia\\SPIDAuth\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Italia\\SPIDAuth\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Italia\\SPIDAuth\\ServiceProvider"
      ]
    },
    "patches": {
      "onelogin/php-saml": {
        "Compatibility with SPID": "https://rawgit.com/italia/spid-laravel/master/patches/php-saml-4.1.0-spid.patch"
      }
    }
  },
  "archive": {
    "exclude": [
      "/tests",
      "/certs",
      ".editorconfig",
      "php_cs.dist"
    ]
  },
  "config": {
    "allow-plugins": {
      "cweagans/composer-patches": true
    }
  }
}
